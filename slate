config defaultToCurrentScreen true
config focusPreferSameApp false

alias hyper ctrl;shift;alt;cmd

alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias left move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias right move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY

layout fullLayout 'Google Chrome':REPEAT ${full}
layout fullLayout 'Safari':REPEAT ${full}
layout fullLayout 'Sublime Text':REPEAT ${full}
layout fullLayout 'Reeder':REPEAT ${full}
layout fullLayout 'iTunes':REPEAT ${full}
layout fullLayout 'iTerm':REPEAT ${full}
layout fullLayout 'Sparrow':REPEAT ${full}
layout fullLayout 'Airmail':REPEAT ${full}
layout fullLayout 'Numbers':REPEAT ${full}
layout fullLayout 'Xcode':REPEAT ${full}
layout fullLayout 'ReadKit':REPEAT ${full}

bind ,:ctrl ${full}
bind ;:${hyper} ${left}
bind ':${hyper} ${right}
bind .:ctrl layout fullLayout
bind ;:ctrl focus left
bind ':ctrl focus right
