[user]
	useConfigOnly = true
[user "default"]
	name = Tony Wang
	email = tony@initialcommit.net
	signingkey = B9CC2434F14C9B55
[alias]
	co = checkout
	st = status -sb --ignore-submodules=untracked -uno
	ci = commit -v
	out = !"git fetch; git log origin/HEAD..master"
	unpushed = log --branches --not --remotes
	# reset changed files in current directory
	coc = !"git st . | awk '$1 == \"M\" {print $2}' | xargs git checkout"
    pushf = push --force-with-lease
	sw = switch
	identity = "! git config user.name \"$(git config user.$1.name)\"; git config user.email \"$(git config user.$1.email)\"; [ \"$(git config user.$1.signingkey)\" ] && git config user.signingkey \"$(git config user.$1.signingkey)\"; :"
[apply]
	whitespace = fix
[push]
	default = upstream
	recurseSubmodules = check
	autoSetupRemote = true
[core]
	excludesfile = ~/.gitignore_global
[log]
	decorate = true
[color]
	ui = true
[color.diff]
	meta = "yellow"
	frag = "magenta bold"
	;commit = "yellow bold"
	old = "red bold"
	;new = "green bold"
	whitespace = "red reverse"
[color.diff-highlight]
	oldNormal = "red bold"
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green 22"
[commit]
	gpgsign = true
[gpg]
	program = gpg
[diff]
	noprefix = true
[protocol]
	version = 2
[pull]
	ff = only
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only
[delta]
	light = true
    features = line-numbers
	whitespace-error-style = 22 reverse
	syntax-theme = Solarized (light)
	navigate = true
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[merge]
	conflictstyle = diff3
