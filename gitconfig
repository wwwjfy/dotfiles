[user]
	name = Tony Wang
	email = wwwjfy@gmail.com
[alias]
	co = checkout
	st = status -sb --ignore-submodules=untracked
	ci = commit -v
	out = !"git fetch; git log origin/HEAD..master"
	unpushed = log --branches --not --remotes
	# reset changed files in current directory
	coc = !"git st . | awk '$1 == \"M\" {print $2}' | xargs git checkout"
[apply]
	whitespace = fix
[push]
	default = upstream
[core]
	excludesfile = ~/.gitignore_global
[log]
	decorate = true
[color]
	ui = true
