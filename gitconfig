[alias]
	co = checkout
	st = status -sb --ignore-submodules=untracked -uno
	ci = commit -v
	out = !"git fetch; git log origin/HEAD..master"
	unpushed = log --branches --not --remotes
	# reset changed files in current directory
	coc = !"git st . | awk '$1 == \"M\" {print $2}' | xargs git checkout"
    pushf = push --force-with-lease
[apply]
	whitespace = fix
[push]
	default = upstream
	recurseSubmodules = check
[core]
	excludesfile = ~/.gitignore_global
[log]
	decorate = true
[color]
	ui = true
[color.diff]
	meta = "yellow"
	frag = "magenta bold"
	;commit = "yellow bold"
	old = "red bold"
	;new = "green bold"
	whitespace = "red reverse"
[commit]
	gpgsign = true
[gpg]
	program = gpg
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
[diff]
	noprefix = true
